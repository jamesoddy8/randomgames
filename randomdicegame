def throw_dice
  return rand(1..12), rand(1..12)
end

player_1_score = 0
player_2_score = 0

while true do
  player_1, player_2 = throw_dice
  puts "player_1: #{player_1} - player_2: #{player_2}"

if player_1 > player_2 
  puts "Player_1 wins!"
  break

elsif player_2 > player_1
  puts "Player_2 wins!"
  break
  
  end
end
